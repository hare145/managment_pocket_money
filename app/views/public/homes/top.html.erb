<div class="container">
  <div class="row">
    <nav>
      <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <button
          class="nav-link active"
          id="nav-home-tab"
          data-bs-toggle="tab"
          data-bs-target="#nav-home"
          type="button"
          role="tab"
          aria-controls="nav-home"
          aria-selected="true"
        >
          <li>
            <% yyyy_mm = Time.now - %>
            <%= yyyy_mm.strftime("%Y/%m") %>
          </li>
        </button>
        <button
          class="nav-link"
          id="nav-profile-tab"
          data-bs-toggle="tab"
          data-bs-target="#nav-profile"
          type="button"
          role="tab"
          aria-controls="nav-profile"
          aria-selected="false"
        >
          <% yyyy_mm = Time.now - Time.ago(1.month)  %>
          <%= yyyy_mm.strftime("%Y/%m") %>
        </button>
        <button
          class="nav-link"
          id="nav-contact-tab"
          data-bs-toggle="tab"
          data-bs-target="#nav-contact"
          type="button"
          role="tab"
          aria-controls="nav-contact"
          aria-selected="false"
        >
          <% yyyy_mm = Time.now - Time.ago(2.month) %>
          <%= yyyy_mm.strftime("%Y/%m") %>
        </button>
      </div>
    </nav>
    <div class="tab-content" id="nav-tabContent">
      <div
        class="tab-pane fade show active"
        id="nav-home"
        role="tabpanel"
        aria-labelledby="nav-home-tab"
      >
        <% @month = params[:month] ? Date.parse(params[:month]) : Date.today %>
        <%= column_chart @user_expenditure.where(created_at: @month.in_time_zone.all_month).pluck(:rent, :utilities, :food, :transportation,
                                                                                                  :phone_bills, :internet_fees, :medical, :education,
                                                                                                  :entertainment_hobbies, :clothing, :debt_repayment, :miscellaneous,) %>
      </div>
      <div
        class="tab-pane fade"
        id="nav-profile"
        role="tabpanel"
        aria-labelledby="nav-profile-tab"
      >
        ...
      </div>
      <div
        class="tab-pane fade"
        id="nav-contact"
        role="tabpanel"
        aria-labelledby="nav-contact-tab"
      >
        ...
      </div>
    </div>
  </div>
</div>

