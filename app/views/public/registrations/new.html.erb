<div class="container mt-5 bg-light">
  <div class="row form-group">
    <div class="col-1">
    </div>
    <div class="col-5">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
    
        <div class="field m-4">
          <%= f.label :name, "名前", class: "text-right col-form-label" %><br />
          <%= f.text_field :name, class: "form-control" %>
        </div>
        
        <div class="field m-4">
          <%= f.label :email,"メールアドレス", class: "text-right col-form-label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
        
        <div class="field m-4">
          <%= f.label :password, "パスワード（６文字以上）", class: "text-right col-form-label" %>
          <% if @minimum_password_length %>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
      
        <div class="field m-4">
          <%= f.label :password_confirmation, "パスワード再入力", class: "text-right col-form-label" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
      
      <div class="container">
        <div class="row">
          <div class="col-1">
          </div>
          <div class="col-4">
            <%= f.submit "ログイン", class: "form-control m-3 btn btn-primary" %>
          </div>
          <div class="col-1">
          </div>
          <div class="col-4">
            <%= link_to "cancel", new_user_registration_path, class: "form-control m-3 btn btn-secondary"  %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-6">
      <div class="container h-100">
        <div class="row h-75">
        </div>
        <div class="row justify-content-center">
          <div class="col-4 pt-3 text-center bg-info-subtle bg-gradient">
            <p>会員登録済みの方は</p>
            <p><%= link_to "こちら", new_user_session_path %></p>  
          </div>
        </div>
      </div>
    </div>
  </div>
</div>